<h2> 商品列表 </h2>

<div class="admin-search-bar">
  <%= form_tag search_admin_products_path , method: :get, class: "navbar-form navbar-left" do %>
    <div class="input-group">
      <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="请输入商品信息">
      <div class="input-group-btn">
        <button class="btn btn-default" type="submit">
          <i class="glyphicon glyphicon-search"></i>
        </button>
      </div>
    </div>
  <% end %>
</div>

<%= link_to("新增商品", new_admin_product_path, class: "btn btn-primary btn-sm pull-right") %>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>#</th>
    <th>商品图</th>
    <th>名称</th>
    <th>价格</th>
    <th width="100"> 操作选项</th>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td>
        <%= product.id %>
      </td>
      <td>
        <%= link_to product_path(product) do %>
          <% if product.image.present? %>
            <%= image_tag(product.image.small.url, class: "small") %>
          <% else %>
            <%= image_tag("http://placehold.it/70x70&text=No Pic", class: "small") %>
          <% end %>
        <% end %>
      </td>
      <td>
        <%= product.title %>
      </td>
      <td>
        <%= product.price %>
      </td>
      <td>
        <span class="btn btn-default btn-sm"><%= link_to("编辑", edit_admin_product_path(product)) %></span>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>