<h2> 添加新商品 </h2>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= simple_form_for [:admin, @product] do |f| %>

      <div class="group">
        <%= f.input :title %>
      </div>

      <div class="group">
        <%= f.input :description %>
      </div>

      <div class="group">
        <%= f.input :quantity %>
      </div>

      <div class="group">
        <%= f.input :price %>
      </div>

      <div class="group">
        <%= f.input :image, as: :file %>
      </div>

      <div class="group">
        <%= f.label :商品详情区域图片 %><br>
        <%= f.file_field :avatar, multiple: true, name: "pictures[avatar][]" %>
      </div>

      <%= f.input :is_hidden, :label => "上线", as: :radio_buttons, collection: [['上线', false], ['隐藏', true]], required: true %>

      <%= f.submit "提交", data: { disable_with: "Submitting..." }, class: "btn btn-primary pull-right" %>

    <% end %>
  </div>
</div>
